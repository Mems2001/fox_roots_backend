{
  "name": "foox-roots-backend",
  "version": "1.0.0",
  "description": "backcend app and db connection for foox-roots-ec",
  "main": "app.ts",
  "scripts": {
    "start": "node ./src/app.js",
    "dev": "nodemon ./src/app.js",
    "u_mig_all": "sequelize-cli db:migrate:undo:all",
    "mig_all": "sequelize-cli db:migrate",
    "seeds_all": "sequelize-cli db:seed:all",
    "db_reset": "npm run u_mig_all && npm run mig_all && npm run seeds_all",
    "deploy": "npm install && npm run db_reset"
  },
  "author": "mems2001",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.1.0",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
